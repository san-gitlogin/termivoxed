# Storage paths
STORAGE_DIR=storage
PROJECTS_DIR=storage/projects
TEMP_DIR=storage/temp
CACHE_DIR=storage/cache
OUTPUT_DIR=storage/output

# FFmpeg settings
FFMPEG_PATH=ffmpeg
FFPROBE_PATH=ffprobe

# TTS settings
TTS_CACHE_ENABLED=true
MAX_CONCURRENT_TTS=2

# Export settings
DEFAULT_VIDEO_CODEC=libx264
DEFAULT_AUDIO_CODEC=aac
DEFAULT_CRF=23
DEFAULT_PRESET=medium

# Quality presets
LOSSLESS_CRF=0
HIGH_CRF=18
BALANCED_CRF=23

# Audio mixing
TTS_VOLUME_BOOST=3
BGM_VOLUME_REDUCTION=16
FADE_DURATION=3.0

# Logging
LOG_LEVEL=INFO
